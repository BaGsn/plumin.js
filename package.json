    "paper": "git://github.com/paperjs/paper.js.git"
  },
  "devDependencies": {
    "browserify": "^6.2.0",
    "watchify": "^2.1.1",
    "exorcist": "^0.1.6",
    "uglify-js": "^2.4.14"
  },
  "scripts": {
